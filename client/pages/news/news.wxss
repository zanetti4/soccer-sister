.wxParse-u {
  text-decoration: underline;
}
.wxParse-hide {
  display: none;
}
.WxEmojiView {
  align-items: center;
}
.wxEmoji {
  width: 16px;
  height: 16px;
}
.wxParse-tr {
  display: flex;
  border-right: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
  border-top: 1px solid #e0e0e0;
}
.wxParse-th,
.wxParse-td {
  flex: 1;
  padding: 5px;
  font-size: 28rpx;
  border-left: 1px solid #e0e0e0;
  word-break: break-all;
}
.wxParse-td:last {
  border-top: 1px solid #e0e0e0;
}
.wxParse-th {
  background: #f0f0f0;
  border-top: 1px solid #e0e0e0;
}
.wxParse-del {
  display: inline;
}
.wxParse-figure {
  overflow: hidden;
}
page {
  padding: 20rpx 20rpx 80rpx;
  width: auto;
  height: 100%;
  box-sizing: border-box;
  overflow-y: hidden;
}
.container {
  height: 100%;
}
/* 文章 */
.title {
  font-size: 44rpx;
  font-weight: 700;
}
.info {
  border-bottom: solid 1px #D6D6D6;
  color: #999;
  line-height: 3;
  font-size: 22rpx;
}
.info text {
  margin-right: 20rpx;
  color: #F2708C;
}
.content {
  padding-top: 20rpx;
  font-size: 28rpx;
  line-height: 1.8;
}
.wxParse-p {
  text-indent: 2em;
  margin-bottom: 20rpx;
}
.content-video {
  width: 710rpx;
  height: 437rpx;
  overflow: visible;
}
.content-txt {
  text-indent: 2em;
  margin-bottom: 20rpx;
}
/* 评论 */
.comtit {
  display: block;
  text-align: center;
  font: 700 26rpx / 1.8 "微软雅黑";
}
.comsub {
  width: 375rpx;
  margin: 0 auto 20rpx;
  text-align: center;
  background: url(data:image/jpg;base64,) repeat-x left center;
}
.comsub text {
  color: #BBB;
  display: inline-block;
  background-color: #FAFAFA;
  padding: 0 20rpx;
  font-size: 20rpx;
}
.comeach {
  border-bottom: solid 1px #D6D6D6;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.comeach-top {
  display: flex;
  margin-bottom: 10rpx;
}
.comeach-top image {
  flex: 1 0 0;
  width: 70rpx;
  height: 70rpx;
}
.comeach-top-cen {
  flex: 7 0 0;
  color: #999;
  font-size: 22rpx;
  padding-left: 10rpx;
}
.comeach-top-cen text {
  display: block;
  color: #F2708C;
}
.comeach-top-like {
  flex: 1 0 0;
  color: #999;
  font-size: 22rpx;
  text-align: right;
}
.comeach-top-like i {
  color: #3F5A93;
  font-size: 32rpx;
  margin-left: 5rpx;
}
.icon-icon-test:before {
  content: "\e65c";
}
.comeach-pics {
  margin-top: 10rpx;
  display: block;
  width: 500rpx;
}
.comeach-reply {
  display: inline-block;
  font-size: 22rpx;
  background-color: #F4F4F4;
  color: #F4587A;
  line-height: 2;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.commore {
  display: block;
  text-align: center;
  color: #999;
  line-height: 2;
}
.commore i {
  font-size: 40rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  position: relative;
  z-index: 0;
}
.commore i text {
  position: absolute;
  z-index: 10;
  left: -25rpx;
  top: -10rpx;
  color: #F2708C;
  background-color: #FAFAFA;
  font-size: 20rpx;
  line-height: 1.5;
  width: 50rpx;
}
.icon-pinglun:before {
  content: "\e618";
}
/* 底部分享 */
.bottomIcon {
  color: #F2708C;
  margin-right: 10rpx;
  font-size: 44rpx;
  vertical-align: middle;
}
.share {
  position: fixed;
  z-index: 50;
  bottom: 0;
  left: 0;
  padding: 5rpx;
  background-color: white;
  display: flex;
  box-sizing: border-box;
  width: 750rpx;
}
.share button {
  flex: 1 0 0;
  padding: 0;
  font-size: 24rpx;
  line-height: 1.5;
  color: #333;
  background-color: transparent;
}
.share button::after {
  border-radius: 0;
  -webkit-border-radius: 0;
  border: none;
}
.share button i {
  color: #F2708C;
  margin-right: 10rpx;
  font-size: 44rpx;
  vertical-align: middle;
}
.share view {
  flex: 1 0 0;
  text-align: center;
}
.share view i {
  color: #F2708C;
  margin-right: 10rpx;
  font-size: 44rpx;
  vertical-align: middle;
}
.icon-weixin:before {
  content: "\e615";
}
.icon-friends:before {
  content: "\e644";
}
/* 分享图片 */
.mask {
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
}
.mask canvas {
  width: 600rpx;
  margin: 0 auto 40rpx;
}
.mask canvas.mask-drawing {
  background: #FAFAFA url(data:image/png;base64,) no-repeat center;
}
.mask-deal {
  text-align: center;
}
.mask-deal text {
  display: inline-block;
  background-color: #F2708C;
  color: white;
  font-size: 26rpx;
  line-height: 2;
  padding: 0 30rpx;
  border-radius: 20px;
  -webkit-border-radius: 20px;
}
.mask-deal view {
  padding-top: 20rpx;
}
.mask-deal view i {
  font-size: 50rpx;
  color: rgba(255, 255, 255, 0.8);
}
.icon-quxiao:before {
  content: "\e65d";
}
